<Window x:Class="start28.Protocol_start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:start28"
        mc:Ignorable="d"
        Title="Протокол старта" Height="450" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Время Старта:" Margin="0,0,0,5"/>
            <DatePicker Name="Time_Start" Margin="0,0,0,10"/>

            <TextBlock Text="Дистанция:" Margin="0,0,0,5"/>
            <TextBox Name="Distance" Margin="0,0,0,10"/>
            <Button Content="Подтвердить" Click="Start_Click" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
