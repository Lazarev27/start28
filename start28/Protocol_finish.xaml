<Window x:Class="start28.Protocol_finish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:start28"
        mc:Ignorable="d"
        Title="Протокол финиша" Height="425" Width="320" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Время финиша: " Margin="0,0,0,5"/>
            <DatePicker Name="FinishTime" Margin="0,0,0,10"/>

            <TextBlock Text="Дистанция:" Margin="0,0,0,5"/>
            <TextBox Name="DistanceBox" Margin="0,0,0,10" PreviewTextInput="DistanceBox_PreviewTextInput"/>

            <TextBlock Text="Позиция:" Margin="0,0,0,5"/>
            <TextBox Name="Position" Margin="0,0,0,10" PreviewTextInput="Position_PreviewTextInput"/>
            <Button Content="Подтвердить" Click="ProtocolFinish_Click" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
