<Window x:Class="start28.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="425" Width="320" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>

            <TextBlock Text="Login:" Margin="0,0,0,5"/>
            <TextBox Name="LoginBox" Margin="0,0,0,10"/>

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <TextBox Name="PasswordBox" Margin="0,0,0,10"/>

            <TextBlock Text="Имя участника:" Margin="0,0,0,5"/>
            <TextBox Name="FirstNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия участника:" Margin="0,0,0,5"/>
            <TextBox Name="LastNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Дата рождения:" Margin="0,0,0,5"/>
            <DatePicker Name="BirthDatePicker" Margin="0,0,0,10"/>

            <TextBlock Text="Имя команды:" Margin="0,0,0,5"/>
            <TextBox Name="TeamNameTextBox" Margin="0,0,0,10"/>

            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Width="120"/>
            <Button Content="Next" Click="ButtonOpenProtocol_start_Click" Width="50" Margin="220,20,0,0" />
        </StackPanel>
    </Grid>
</Window>
